@model CiisaPsw_Exam3.Models.Departamento

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Departamento</h1>

<h4>@Model.Nombre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="eformDep" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartamentoId" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <button asp-action="Index" class="btn btn-secondary cancel">Cancelar</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista de departamentos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
