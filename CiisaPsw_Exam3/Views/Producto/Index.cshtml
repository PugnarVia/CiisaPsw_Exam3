@model IEnumerable<CiisaPsw_Exam3.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create">Crear Producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dep)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Activo == 1)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioUnit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stock)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dep.Nombre)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductoId">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductoId">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
